<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.restaurantapp.order_confirm"
    tools:showIn="@layout/activity_order_confirm">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/finalOrderLabel"
            android:id="@+id/textView3"
            android:layout_row="0"
            android:layout_column="0" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="1"
            android:layout_column="0" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:id="@+id/listView2"
            android:layout_row="2"
            android:layout_column="0" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/costLabel"
            android:layout_row="4"
            android:layout_column="0"
            android:textAlignment="center"
            android:textSize="@dimen/abc_action_bar_stacked_max_height" />

        <Space
            android:layout_width="8dp"
            android:layout_height="@dimen/abc_action_bar_content_inset_material"
            android:layout_row="5"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/payCheck"
            android:id="@+id/textView4"
            android:layout_row="6"
            android:layout_column="0"
            android:clickable="false"
            android:elegantTextHeight="false"
            android:enabled="true"
            android:focusable="false"
            android:textSize="@dimen/abc_action_bar_content_inset_material" />

        <Space
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_row="7"
            android:layout_column="0" />

        <Button
            android:layout_width="341dp"
            android:layout_height="64dp"
            android:text="@string/confirm"
            android:id="@+id/button3"
            android:layout_row="8"
            android:layout_column="0"
            android:background="@color/colorAccent"
            android:elegantTextHeight="false"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_dialog_padding_material" />

    </GridLayout>
</RelativeLayout>
